{
    "compilerOptions": {
        "outDir": "../dist/api",
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "ES2020",
        "lib": [
            "ES2020"
        ],
        "declaration": false,
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "strictNullChecks": false,
        "noEmit": false,
        "resolveJsonModule": true,
        "allowJs": true,
        "isolatedModules": true
    },
    "include": [
        "index.ts"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "test",
        "**/*.spec.ts",
        "**/*.test.ts"
    ]
}
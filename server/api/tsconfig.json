{
    "extends": "../tsconfig.build.json",
    "compilerOptions": {
        "outDir": "../dist/api",
        "rootDir": ".",
        "module": "commonjs",
        "target": "ES2020",
        "lib": [
            "ES2020"
        ],
        "declaration": false,
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "strictNullChecks": false,
        "resolveJsonModule": true,
        "baseUrl": "../",
        "paths": {
            "@/*": [
                "src/*"
            ]
        }
    },
    "include": [
        "index.ts",
        "../src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "test",
        "**/*spec.ts"
    ]
}
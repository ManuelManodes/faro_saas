{
    "info": {
        "_postman_id": "calendar-event-api-collection",
        "name": "EduSaaS - Calendar Events API",
        "description": "Collection para probar los endpoints de eventos del calendario escolar",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "item": [
        {
            "name": "Create Calendar Event",
            "event": [
                {
                    "listen": "test",
                    "script": {
                        "exec": [
                            "pm.test('Status code is 201', function () {",
                            "    pm.response.to.have.status(201);",
                            "});",
                            "",
                            "if (pm.response.code === 201) {",
                            "    var jsonData = pm.response.json();",
                            "    pm.collectionVariables.set('eventId', jsonData.id);",
                            "}"
                        ],
                        "type": "text/javascript"
                    }
                }
            ],
            "request": {
                "method": "POST",
                "header": [
                    {
                        "key": "Content-Type",
                        "value": "application/json"
                    },
                    {
                        "key": "x-user-email",
                        "value": "{{userEmail}}"
                    }
                ],
                "body": {
                    "mode": "raw",
                    "raw": "{\n  \"title\": \"Reunión de Apoderados - 7° Básico\",\n  \"description\": \"Reunión informativa para padres y apoderados de 7° básico. Se tratarán temas de rendimiento académico y planificación del segundo semestre.\",\n  \"eventType\": \"REUNION\",\n  \"startDate\": \"2025-02-10\",\n  \"endDate\": \"2025-02-10\",\n  \"startTime\": \"18:00\",\n  \"endTime\": \"20:00\",\n  \"location\": \"Auditorio Principal\",\n  \"isAllDay\": false,\n  \"status\": \"PROGRAMADO\",\n  \"organizerEmail\": \"director@colegio.cl\",\n  \"attendees\": [\"profesor1@colegio.cl\", \"profesor2@colegio.cl\"]\n}",
                    "options": {
                        "raw": {
                            "language": "json"
                        }
                    }
                },
                "url": {
                    "raw": "{{baseUrl}}/calendar-events",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "calendar-events"
                    ]
                }
            }
        },
        {
            "name": "List Calendar Events",
            "request": {
                "method": "GET",
                "header": [],
                "url": {
                    "raw": "{{baseUrl}}/calendar-events",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "calendar-events"
                    ]
                }
            }
        },
        {
            "name": "List Events - Filtered by Type",
            "request": {
                "method": "GET",
                "header": [],
                "url": {
                    "raw": "{{baseUrl}}/calendar-events?eventType=EVALUACION&status=PROGRAMADO",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "calendar-events"
                    ],
                    "query": [
                        {
                            "key": "eventType",
                            "value": "EVALUACION"
                        },
                        {
                            "key": "status",
                            "value": "PROGRAMADO"
                        }
                    ]
                }
            }
        },
        {
            "name": "Get Upcoming Events",
            "request": {
                "method": "GET",
                "header": [],
                "url": {
                    "raw": "{{baseUrl}}/calendar-events/upcoming?limit=10",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "calendar-events",
                        "upcoming"
                    ],
                    "query": [
                        {
                            "key": "limit",
                            "value": "10"
                        }
                    ]
                }
            }
        },
        {
            "name": "Get Event by ID",
            "request": {
                "method": "GET",
                "header": [],
                "url": {
                    "raw": "{{baseUrl}}/calendar-events/{{eventId}}",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "calendar-events",
                        "{{eventId}}"
                    ]
                }
            }
        },
        {
            "name": "Update Event",
            "request": {
                "method": "PUT",
                "header": [
                    {
                        "key": "Content-Type",
                        "value": "application/json"
                    },
                    {
                        "key": "x-user-email",
                        "value": "{{userEmail}}"
                    }
                ],
                "body": {
                    "mode": "raw",
                    "raw": "{\n  \"status\": \"CONFIRMADO\",\n  \"location\": \"Sala de Reuniones 2\"\n}",
                    "options": {
                        "raw": {
                            "language": "json"
                        }
                    }
                },
                "url": {
                    "raw": "{{baseUrl}}/calendar-events/{{eventId}}",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "calendar-events",
                        "{{eventId}}"
                    ]
                }
            }
        },
        {
            "name": "Delete Event",
            "request": {
                "method": "DELETE",
                "header": [],
                "url": {
                    "raw": "{{baseUrl}}/calendar-events/{{eventId}}",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "calendar-events",
                        "{{eventId}}"
                    ]
                }
            }
        }
    ],
    "variable": [
        {
            "key": "baseUrl",
            "value": "http://localhost:3001/api",
            "type": "default"
        },
        {
            "key": "userEmail",
            "value": "director@colegio.cl",
            "type": "default"
        },
        {
            "key": "eventId",
            "value": "",
            "type": "default"
        }
    ]
}
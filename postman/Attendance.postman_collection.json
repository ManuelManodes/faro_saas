{
    "info": {
        "_postman_id": "attendance-api-collection",
        "name": "EduSaaS - Attendance API",
        "description": "Collection para probar los endpoints de gesti√≥n de asistencia",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "item": [
        {
            "name": "Create Attendance",
            "request": {
                "method": "POST",
                "header": [
                    {
                        "key": "Content-Type",
                        "value": "application/json"
                    },
                    {
                        "key": "x-user-email",
                        "value": "{{userEmail}}"
                    }
                ],
                "body": {
                    "mode": "raw",
                    "raw": "{\n  \"studentId\": \"{{studentId}}\",\n  \"courseId\": \"{{courseId}}\",\n  \"date\": \"2025-01-20\",\n  \"status\": \"PRESENTE\"\n}",
                    "options": {
                        "raw": {
                            "language": "json"
                        }
                    }
                },
                "url": {
                    "raw": "{{baseUrl}}/attendance",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "attendance"
                    ]
                }
            }
        },
        {
            "name": "Bulk Register Attendance",
            "request": {
                "method": "POST",
                "header": [
                    {
                        "key": "Content-Type",
                        "value": "application/json"
                    },
                    {
                        "key": "x-user-email",
                        "value": "{{userEmail}}"
                    }
                ],
                "body": {
                    "mode": "raw",
                    "raw": "{\n  \"courseId\": \"{{courseId}}\",\n  \"date\": \"2025-01-20\",\n  \"attendances\": [\n    {\n      \"studentId\": \"{{studentId}}\",\n      \"status\": \"PRESENTE\"\n    }\n  ]\n}",
                    "options": {
                        "raw": {
                            "language": "json"
                        }
                    }
                },
                "url": {
                    "raw": "{{baseUrl}}/attendance/bulk",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "attendance",
                        "bulk"
                    ]
                }
            }
        },
        {
            "name": "List Attendances",
            "request": {
                "method": "GET",
                "header": [],
                "url": {
                    "raw": "{{baseUrl}}/attendance",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "attendance"
                    ]
                }
            }
        },
        {
            "name": "List Attendances - Filtered",
            "request": {
                "method": "GET",
                "header": [],
                "url": {
                    "raw": "{{baseUrl}}/attendance?studentId={{studentId}}&dateFrom=2025-01-01&dateTo=2025-01-31",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "attendance"
                    ],
                    "query": [
                        {
                            "key": "studentId",
                            "value": "{{studentId}}"
                        },
                        {
                            "key": "dateFrom",
                            "value": "2025-01-01"
                        },
                        {
                            "key": "dateTo",
                            "value": "2025-01-31"
                        }
                    ]
                }
            }
        },
        {
            "name": "Get Student Summary",
            "request": {
                "method": "GET",
                "header": [],
                "url": {
                    "raw": "{{baseUrl}}/attendance/student/{{studentId}}/summary",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "attendance",
                        "student",
                        "{{studentId}}",
                        "summary"
                    ]
                }
            }
        },
        {
            "name": "Get Course Summary",
            "request": {
                "method": "GET",
                "header": [],
                "url": {
                    "raw": "{{baseUrl}}/attendance/course/{{courseId}}/summary",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "attendance",
                        "course",
                        "{{courseId}}",
                        "summary"
                    ]
                }
            }
        },
        {
            "name": "Update Attendance",
            "request": {
                "method": "PUT",
                "header": [
                    {
                        "key": "Content-Type",
                        "value": "application/json"
                    },
                    {
                        "key": "x-user-email",
                        "value": "{{userEmail}}"
                    }
                ],
                "body": {
                    "mode": "raw",
                    "raw": "{\n  \"status\": \"TARDE\",\n  \"arrivalTime\": \"08:45\"\n}",
                    "options": {
                        "raw": {
                            "language": "json"
                        }
                    }
                },
                "url": {
                    "raw": "{{baseUrl}}/attendance/{{attendanceId}}",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "attendance",
                        "{{attendanceId}}"
                    ]
                }
            }
        },
        {
            "name": "Delete Attendance",
            "request": {
                "method": "DELETE",
                "header": [],
                "url": {
                    "raw": "{{baseUrl}}/attendance/{{attendanceId}}",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "attendance",
                        "{{attendanceId}}"
                    ]
                }
            }
        }
    ],
    "variable": [
        {
            "key": "baseUrl",
            "value": "http://localhost:3001/api",
            "type": "default"
        },
        {
            "key": "userEmail",
            "value": "admin@colegio.cl",
            "type": "default"
        },
        {
            "key": "studentId",
            "value": "",
            "type": "default",
            "description": "Get from Students collection"
        },
        {
            "key": "courseId",
            "value": "",
            "type": "default",
            "description": "Get from Courses collection"
        },
        {
            "key": "attendanceId",
            "value": "",
            "type": "default"
        }
    ]
}
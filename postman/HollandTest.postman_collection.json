{
    "info": {
        "_postman_id": "holland-test-api-collection",
        "name": "EduSaaS - Holland Test API",
        "description": "Collection para probar los endpoints del test vocacional de Holland (RIASEC)",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "item": [
        {
            "name": "Create Holland Test",
            "event": [
                {
                    "listen": "test",
                    "script": {
                        "exec": [
                            "pm.test('Status code is 201', function () {",
                            "    pm.response.to.have.status(201);",
                            "});",
                            "",
                            "if (pm.response.code === 201) {",
                            "    var jsonData = pm.response.json();",
                            "    pm.collectionVariables.set('testId', jsonData.id);",
                            "}"
                        ],
                        "type": "text/javascript"
                    }
                }
            ],
            "request": {
                "method": "POST",
                "header": [
                    {
                        "key": "Content-Type",
                        "value": "application/json"
                    },
                    {
                        "key": "x-user-email",
                        "value": "{{userEmail}}"
                    }
                ],
                "body": {
                    "mode": "raw",
                    "raw": "{\n  \"studentId\": \"{{studentId}}\",\n  \"testDate\": \"2025-01-20\",\n  \"scores\": {\n    \"realistic\": 65,\n    \"investigative\": 85,\n    \"artistic\": 70,\n    \"social\": 60,\n    \"enterprising\": 55,\n    \"conventional\": 50\n  },\n  \"dominantTypes\": [\"I\", \"A\", \"R\"],\n  \"interpretation\": \"El estudiante demuestra una fuerte orientación hacia actividades investigativas y artísticas, con preferencia por el análisis y la creatividad. Se recomienda explorar carreras que combinen ciencia y diseño.\",\n  \"recommendations\": [\n    \"Arquitectura\",\n    \"Diseño Industrial\",\n    \"Ingeniería de Software\",\n    \"Diseño Gráfico\",\n    \"Ciencias de la Computación\"\n  ],\n  \"status\": \"COMPLETADO\",\n  \"administeredBy\": \"orientador@colegio.cl\"\n}",
                    "options": {
                        "raw": {
                            "language": "json"
                        }
                    }
                },
                "url": {
                    "raw": "{{baseUrl}}/holland-test",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "holland-test"
                    ]
                }
            }
        },
        {
            "name": "List Holland Tests",
            "request": {
                "method": "GET",
                "header": [],
                "url": {
                    "raw": "{{baseUrl}}/holland-test",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "holland-test"
                    ]
                }
            }
        },
        {
            "name": "List Tests - Filtered by Student",
            "request": {
                "method": "GET",
                "header": [],
                "url": {
                    "raw": "{{baseUrl}}/holland-test?studentId={{studentId}}&status=COMPLETADO",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "holland-test"
                    ],
                    "query": [
                        {
                            "key": "studentId",
                            "value": "{{studentId}}"
                        },
                        {
                            "key": "status",
                            "value": "COMPLETADO"
                        }
                    ]
                }
            }
        },
        {
            "name": "Get Latest Test by Student",
            "request": {
                "method": "GET",
                "header": [],
                "url": {
                    "raw": "{{baseUrl}}/holland-test/student/{{studentId}}/latest",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "holland-test",
                        "student",
                        "{{studentId}}",
                        "latest"
                    ]
                }
            }
        },
        {
            "name": "Get Test by ID",
            "request": {
                "method": "GET",
                "header": [],
                "url": {
                    "raw": "{{baseUrl}}/holland-test/{{testId}}",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "holland-test",
                        "{{testId}}"
                    ]
                }
            }
        },
        {
            "name": "Update Test",
            "request": {
                "method": "PUT",
                "header": [
                    {
                        "key": "Content-Type",
                        "value": "application/json"
                    },
                    {
                        "key": "x-user-email",
                        "value": "{{userEmail}}"
                    }
                ],
                "body": {
                    "mode": "raw",
                    "raw": "{\n  \"status\": \"INVALIDADO\",\n  \"interpretation\": \"Test revisado y actualizado por nueva evaluación.\"\n}",
                    "options": {
                        "raw": {
                            "language": "json"
                        }
                    }
                },
                "url": {
                    "raw": "{{baseUrl}}/holland-test/{{testId}}",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "holland-test",
                        "{{testId}}"
                    ]
                }
            }
        },
        {
            "name": "Delete Test",
            "request": {
                "method": "DELETE",
                "header": [],
                "url": {
                    "raw": "{{baseUrl}}/holland-test/{{testId}}",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "holland-test",
                        "{{testId}}"
                    ]
                }
            }
        }
    ],
    "variable": [
        {
            "key": "baseUrl",
            "value": "http://localhost:3001/api",
            "type": "default"
        },
        {
            "key": "userEmail",
            "value": "orientador@colegio.cl",
            "type": "default"
        },
        {
            "key": "studentId",
            "value": "",
            "type": "default",
            "description": "Get from Students collection"
        },
        {
            "key": "testId",
            "value": "",
            "type": "default"
        }
    ]
}
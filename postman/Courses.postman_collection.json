{
    "info": {
        "_postman_id": "course-api-collection",
        "name": "EduSaaS - Courses API",
        "description": "IMPORTANTE: Cambia el código cada vez. Formato: XXX-YYZ-AAAA (ej: MAT-8A-2025, FIS-1M-2025, QUI-2M-2025)",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "item": [
        {
            "name": "Create Course",
            "event": [
                {
                    "listen": "test",
                    "script": {
                        "exec": [
                            "pm.test('Status code is 201', function () {",
                            "    pm.response.to.have.status(201);",
                            "});",
                            "",
                            "if (pm.response.code === 201) {",
                            "    var jsonData = pm.response.json();",
                            "    pm.collectionVariables.set('courseId', jsonData.id);",
                            "}"
                        ],
                        "type": "text/javascript"
                    }
                }
            ],
            "request": {
                "method": "POST",
                "header": [
                    {
                        "key": "Content-Type",
                        "value": "application/json"
                    },
                    {
                        "key": "x-user-email",
                        "value": "{{userEmail}}"
                    }
                ],
                "body": {
                    "mode": "raw",
                    "raw": "{\n  \"code\": \"QUI-2M-2025\",\n  \"name\": \"Química\",\n  \"grade\": \"2° Medio\",\n  \"section\": \"A\",\n  \"subject\": \"Química\",\n  \"teacherName\": \"Isabel Rojas\",\n  \"teacherEmail\": \"isabel.rojas@colegio.cl\",\n  \"schedule\": [\n    {\n      \"dayOfWeek\": \"Lunes\",\n      \"startTime\": \"14:00\",\n      \"endTime\": \"15:30\"\n    },\n    {\n      \"dayOfWeek\": \"Miércoles\",\n      \"startTime\": \"14:00\",\n      \"endTime\": \"15:30\"\n    }\n  ],\n  \"capacity\": 28,\n  \"academicYear\": 2025,\n  \"semester\": 1\n}",
                    "options": {
                        "raw": {
                            "language": "json"
                        }
                    }
                },
                "url": {
                    "raw": "{{baseUrl}}/courses",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "courses"
                    ]
                }
            }
        },
        {
            "name": "List Courses",
            "request": {
                "method": "GET",
                "header": [],
                "url": {
                    "raw": "{{baseUrl}}/courses",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "courses"
                    ]
                }
            }
        },
        {
            "name": "List Courses - Filtered",
            "request": {
                "method": "GET",
                "header": [],
                "url": {
                    "raw": "{{baseUrl}}/courses?grade=2° Medio&subject=Química",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "courses"
                    ],
                    "query": [
                        {
                            "key": "grade",
                            "value": "2° Medio"
                        },
                        {
                            "key": "subject",
                            "value": "Química"
                        }
                    ]
                }
            }
        },
        {
            "name": "Get Course by ID",
            "request": {
                "method": "GET",
                "header": [],
                "url": {
                    "raw": "{{baseUrl}}/courses/{{courseId}}",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "courses",
                        "{{courseId}}"
                    ]
                }
            }
        },
        {
            "name": "Update Course",
            "request": {
                "method": "PUT",
                "header": [
                    {
                        "key": "Content-Type",
                        "value": "application/json"
                    },
                    {
                        "key": "x-user-email",
                        "value": "{{userEmail}}"
                    }
                ],
                "body": {
                    "mode": "raw",
                    "raw": "{\n  \"capacity\": 30,\n  \"teacherEmail\": \"nuevo.profesor@colegio.cl\"\n}",
                    "options": {
                        "raw": {
                            "language": "json"
                        }
                    }
                },
                "url": {
                    "raw": "{{baseUrl}}/courses/{{courseId}}",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "courses",
                        "{{courseId}}"
                    ]
                }
            }
        },
        {
            "name": "Finalize Course",
            "request": {
                "method": "DELETE",
                "header": [
                    {
                        "key": "x-user-email",
                        "value": "{{userEmail}}"
                    }
                ],
                "url": {
                    "raw": "{{baseUrl}}/courses/{{courseId}}",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "courses",
                        "{{courseId}}"
                    ]
                }
            }
        }
    ],
    "variable": [
        {
            "key": "baseUrl",
            "value": "http://localhost:3001/api",
            "type": "default"
        },
        {
            "key": "userEmail",
            "value": "admin@colegio.cl",
            "type": "default"
        },
        {
            "key": "courseId",
            "value": "",
            "type": "default"
        }
    ]
}